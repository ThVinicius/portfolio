// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Badges  {
  name          String          @id
  image         String
  ProjectBadges ProjectBadges[]

  @@map("badges")
}

model Projects  {
  id            Int             @id @default(autoincrement())
  name          String
  type          ProjectType
  description   String
  image         String
  ProjectBadges ProjectBadges[]
  Links         Links[]

  @@map("projects")
}

model ProjectBadges {
  id          Int      @id @default(autoincrement())
  badge_name  String
  project_id  Int
  badge       Badges   @relation(fields: [badge_name],references: [name])
  project     Projects @relation(fields: [project_id],references: [id])
  

  @@map("project_badges")
}

model Links {
  id           Int         @id @default(autoincrement())
  label        LinkLabel
  href         String
  project_id   Int
  project      Projects    @relation(fields: [project_id],references: [id])

  @@map("links")
}

enum ProjectType {
  FrontEnd
  BackEnd
  FullStack
}

enum LinkLabel {
  FrontEnd_Repo @map("FrontEnd Repo")
  BackEnd_Repo  @map("BackEnd Repo")
  Deploy
}
